@model IEnumerable<CS2AAranezAllen_MVCProject.BusLogic.Model.tblStudent>

<div>
    <h2>Student List</h2>
    <a class="btn alert-primary m-2" href="/Student/AddNewStudent"> Add New Student</a>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Course</th>
        </tr>

		@foreach (var student in Model)
        {       
            <tr>
                <td>@student.firstName</td>
				<td>@student.lastName</td>
				<td>@student.Age</td>
				<td>@student.Course</td>
			</tr>
		}
    </table>
</div>